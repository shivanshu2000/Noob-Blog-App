<%- include('../includes/head.ejs')  %> 
<link rel="stylesheet" href="/css/addPost.css">
<head>

<body>
    <%- include('../includes/navigation.ejs')  %> 
    <main>
        <form action="/postEdit/<%=post._id%>  " method="POST" class="inputs" enctype="multipart/form-data">
            <div class="form-control">
                <label for="title">Title</label>
            <input type="text" name="title" id="inputs" class="text" value="<%=post.title %> ">
            </div>
            <div class="form-control">
            <label for="image" class="image" >Image</label>
            <input type="file" name="image" id="image">
            </div>
            <div class="form-control">
            <label for="title">Caption</label>
            <textarea name="caption" cols="30" rows="5" class="caption"><%=post.content%></textarea>
            </div>
            
            <input  name="id" value="<%=post._id%> ">
            <button type="submit" class="btn">Edit Post</button>
          </form>
        </main>
    <%- include('../includes/end.ejs') %> 
